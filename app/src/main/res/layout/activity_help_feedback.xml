<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"> <!-- Set background to white -->

    <!-- Back button and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/toolbar">

        <!-- Back Icon -->
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            android:id="@+id/back_button_support"
             />

        <!-- Title Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Support"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- Popular Help Articles Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:padding="5dp"
        android:text="@string/popular_support_post"
        android:textColor="#000000"
        android:textSize="20sp"


        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:padding="10dp"
        android:text="Backup tool for Gmail"
        android:textColor="#000000"
        android:textSize="16sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:padding="10dp"
        android:text="Change password for Gmail"
        android:textColor="#000000"
        android:textSize="16sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:padding="10dp"
        android:text="Add gmail or phone number to backup"
        android:textColor="#000000"
        android:textSize="16sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:padding="10dp"
        android:text="@string/popular_support_post"
        android:textColor="#000000"
        android:textSize="16sp" />



    <!-- RecyclerView for Help Topics -->


    <androidx.appcompat.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:iconifiedByDefault="false"
        android:background="@drawable/search_view_background"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:textColorHint="#888888" />


    <!-- Feedback Button -->
    <Button
        android:id="@+id/btn_send_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/send_feedback"
        android:textColor="#000000"
        android:gravity="center"
        android:background="?attr/selectableItemBackground"
        android:textSize="16sp"
        />
</LinearLayout>
