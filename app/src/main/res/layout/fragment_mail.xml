<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingVertical="8dp"
    android:paddingHorizontal="16dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Profile icon -->
    <ImageView
        android:id="@+id/emailIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:backgroundTint="#D3D3D3"
        android:src="@drawable/profile_picture1" />

    <!-- Sender -->
    <TextView
        android:id="@+id/emailSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/emailIcon"
        android:layout_marginStart="12dp"
        android:text="Sender"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Date -->
    <TextView
        android:id="@+id/emailDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/emailSender"
        android:text="Oct 16"
        android:textColor="#888888"
        android:textSize="12sp" />

    <!-- Email subject -->
    <TextView
        android:id="@+id/emailSubject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/emailIcon"
        android:layout_marginStart="12dp"
        android:layout_below="@id/emailSender"
        android:textStyle="bold"
        android:layout_toStartOf="@id/starIcon"
        android:layout_marginTop="2dp"
        android:text="Subject"
        android:textColor="#333333"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Email body -->
    <TextView
        android:id="@+id/emailBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/emailIcon"
        android:layout_marginStart="12dp"
        android:layout_below="@id/emailSubject"
        android:layout_toStartOf="@id/starIcon"
        android:layout_marginTop="2dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis lacinia rhoncus felis, eu lobortis nisi hendrerit vel. Pellentesque eget cursus urna, eu ullamcorper est. Sed erat ante, posuere consequat magna sed, sagittis semper ligula. Vivamus nisl ipsum, ultrices a velit a, hendrerit pretium justo."
        android:textColor="#666666"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Star icon -->
    <ImageView
        android:id="@+id/starIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:src="@drawable/star2_icon__"
        app:tint="#888888" />

</RelativeLayout>
