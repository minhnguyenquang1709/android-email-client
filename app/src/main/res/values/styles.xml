<?xml version="1.0" encoding="utf-8"?>
<!-- FOR INDIVIDUAL VIEW -->
<resources>
    <!-- MainActivity AppBar -->
    <style name="appbar.main" parent="ThemeOverlay.AppCompat.ActionBar">

    </style>

    <!-- Floating Action Button -->
    <style name="fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="tint">@color/white</item>
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <!-- FolderFragment -->
    <style name="title_folder">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="content_folder">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="sub_folder">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <!-- InboxFragment -->
    <style name="inbox_username">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#66000000</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="inbox_subject">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="inbox_content">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#99000000</item>
    </style>
</resources>