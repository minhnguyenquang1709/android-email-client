<?xml version="1.0" encoding="utf-8"?>
<!-- FOR INDIVIDUAL VIEW -->
<resources>
    <!-- MainActivity AppBar -->
    <!-- AppBar Theme -->
    <style name="appbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/red</item> <!-- background color -->
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">@dimen/padding_horizontal_toolbar</item>
        <item name="android:paddingEnd">@dimen/padding_horizontal_toolbar</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="appbar.icon">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:radius">50dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>
    <style name="appbar.username">
        <item name="android:text">@string/rachel_jacobs</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <!-- Read Mail Activity-->
    <style name="email_subject">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="email_content">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#CC000000</item>
    </style>
    <style name="ReplyForward">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_width">159dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Floating Action Button -->
    <style name="fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="tint">@color/white</item>
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <!-- FolderFragment -->
    <style name="title_folder">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="content_folder">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="sub_folder">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <!-- InboxFragment -->
    <style name="inbox_username">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#66000000</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="inbox_subject">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="inbox_content">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#99000000</item>
    </style>


    <!-- LoginActivity -->
    <style name="MyTextInputLayout_overlay">
        <item name="colorOnSurface">@color/black</item>
        <item name="colorPrimary">@color/red</item>
    </style>

    <!-- Dialog -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!-- Settings Activity -->
    <style name="Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="materialSwitchStyle">@style/Widget.App.Switch</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">@color/red_settings</item>
        <item name="colorSurfaceVariant">@color/white</item>
    </style>



    <!-- Compose Activity -->

</resources>